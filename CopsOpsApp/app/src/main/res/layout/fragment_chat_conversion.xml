<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".fragment.ChatConversionFragment">

<!-- TODO: Update blank fragment layout -->

    <include
        android:id="@+id/toolbar_chat"
        layout="@layout/toolbarnew"
        />


    <View
        android:id="@+id/vi"
        style="@style/HorizontalDividerStyle"
        android:layout_below="@+id/toolbar_chat"
        android:background="@color/blue" />

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar_chat"
        android:layout_marginTop="5dp"
        android:background="@mipmap/img_blue_gradient_background"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/userneameTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20dp"
            android:gravity="center"
            android:text="Ranjan"

            android:textColor="@color/white"
            android:textSize="@dimen/textsize_20sp" />

    </LinearLayout>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/pullToRefresh"
        android:layout_width="match_parent"
        android:layout_below="@+id/ll"
        android:layout_above="@+id/progressBar4"
        android:layout_height="wrap_content">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_chat_messages"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:listSelector="@android:color/transparent" />
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    <ProgressBar
        android:id="@+id/progressBar4"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_20sdp"
        android:layout_above="@+id/layout_chat_send_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:progress="25"
        android:visibility="gone"
        android:indeterminate="true"
        />
    <LinearLayout
        android:id="@+id/layout_chat_send_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:background="?attr/colorPrimary"
        android:orientation="horizontal"
        android:weightSum="3">

        <ImageButton
            android:id="@+id/button_chat_attachment"
            android:layout_width="wrap_content"
             android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:src="@drawable/ic_menu_camera"
            android:tint="@color/blue" />

        <EditText
            android:id="@+id/edit_chat_message"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@drawable/edittext_background_chat"
            android:hint="@string/chat_edit_text_hint"
            android:inputType="textMultiLine"
            android:padding="5dp" />

        <ImageButton
            android:id="@+id/button_chat_send"
            android:layout_width="@dimen/textsize_50sp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:src="@drawable/chat_send"
            android:text="@string/chat_send"
            android:tint="@color/blue" />
    </LinearLayout>

    <TextView
        android:layout_width="150dp"
        android:layout_height="5dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:background="@color/blue" />


</RelativeLayout>