<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/image_background_white"
    android:orientation="vertical">
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbarnew" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/RLprofileimage"
        android:gravity="center_horizontal"
        android:text="@string/TableofAssignments"
        android:textColor="@color/dark_blue"
        android:textSize="@dimen/textsize_28sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/RLprofileimage"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:text="@string/Attributionslist"
        android:textColor="@color/blue_shade"
        android:textSize="@dimen/textsize_18sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginTop="40dp"
        android:background="@mipmap/img_blue_gradient_background"
        android:orientation="horizontal"
        android:weightSum="1.0">

        <TextView
            android:layout_weight=".32"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/date"
            android:textSize="@dimen/textsize_18sp"
            android:textColor="@color/white"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center_horizontal|center_vertical"/>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".01"
            android:background="@color/white"/>

        <TextView
            android:layout_weight=".32"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/object"
            android:textSize="@dimen/textsize_18sp"
            android:textColor="@color/white"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center_horizontal|center_vertical"/>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".01"
            android:background="@color/white"/>

        <TextView
            android:layout_weight=".32"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/state"
            android:textSize="@dimen/textsize_18sp"
            android:textColor="@color/white"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center_horizontal|center_vertical"/>

    </LinearLayout>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:layout_marginTop="10dp"
        android:id="@+id/swipeContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/lvtableofassignments"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </androidx.recyclerview.widget.RecyclerView>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


</LinearLayout>