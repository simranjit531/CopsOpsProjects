<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="copops.com.copopsApp.chat.GroupChannelListFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true">
            <ImageView
                android:id="@+id/iv_recent_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/img_filter"
                android:visibility="visible" />
            <ImageView
                android:id="@+id/iv_person_add"
                android:layout_width="30dp"
                android:layout_height="30dp"

                 android:layout_alignParentRight="true"
                android:background="@mipmap/baseline_add_black_18dp"
                android:visibility="visible" />
            <ImageView
                android:id="@+id/iv_group_add"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginRight="10dp"
                 android:layout_toLeftOf="@id/iv_person_add"
                android:layout_centerVertical="true"
                android:src="@drawable/group_add"

                android:visibility="gone" />
        </RelativeLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusableInTouchMode="true">
    <EditText
        android:id="@+id/et_search_recent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:hint="@string/search"
        android:drawableLeft="@drawable/places_ic_search"
        android:padding="8dp"
        android:layout_margin="10dp"
        android:background="@drawable/bg_search"/>

</RelativeLayout>
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/recent"

            android:textSize="22sp"
            android:textColor="@color/blue"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_place_holder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/groopMsg"

                android:visibility="gone" />

            <com.chatcamp.uikit.channel.ChannelList
                android:id="@+id/channel_list"
                android:layout_margin="10dp"

                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                />
            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" />
        </RelativeLayout>

        <com.chatcamp.uikit.customview.LoadingView
            android:id="@+id/loading_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

    </LinearLayout>

