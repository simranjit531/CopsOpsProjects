<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"

    android:layout_height="match_parent">
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbarnew" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/MyDialogTheme1"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_300sdp"
            android:layout_marginBottom="8dp"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:gravity="center"
            android:layout_marginStart="@dimen/_20sdp"
            android:id="@+id/linearLayout">


            <TextView
                android:text="Password Change"
                android:textColor="@color/dark_blue"
                android:layout_width="match_parent"
                android:textSize="@dimen/_12sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_height="wrap_content"
                />


            <EditText
                android:id="@+id/Etpassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/edittext_lower_background"
                android:hint="Old Password"
                android:padding="@dimen/_10sdp"
                android:maxLength="10"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:textColorHint="@color/aluminiumcolor"
                android:textSize="@dimen/textsize_16sp" />

            <EditText
                android:id="@+id/newpassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:padding="@dimen/_10sdp"
                android:background="@drawable/edittext_lower_background"
                android:hint="New Password"
                android:maxLength="10"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:textColorHint="@color/aluminiumcolor"
                android:textSize="@dimen/textsize_16sp" />


            <EditText
                android:id="@+id/conpassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:padding="@dimen/_10sdp"
                android:background="@drawable/edittext_lower_background"
                android:hint="@string/con_pass_hint"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:maxLength="10"
                android:textColor="@color/black"
                android:textColorHint="@color/aluminiumcolor"
                android:textSize="@dimen/textsize_16sp" />



            <RelativeLayout
                android:id="@+id/RLsave"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/chagepassword"
                android:layout_marginBottom="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"

                android:layout_marginTop="30dp"

                android:background="@mipmap/btn_blue_background">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/TVnext"
                    android:src="@mipmap/img_next" />

                <TextView
                    android:id="@+id/TVnext"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/save"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textsize_16sp" />


            </RelativeLayout>
            <!--<TextView-->
            <!--android:textColor="@color/black"-->
            <!--android:textSize="@dimen/_14sdp"-->
            <!--android:padding="@dimen/_20sdp"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:gravity="center"-->
            <!--android:id="@+id/TV.message"/>-->



        </LinearLayout>

        <!--<Button-->
            <!--android:id="@+id/cancel"-->
            <!--android:layout_width="@dimen/_30sdp"-->
            <!--android:layout_height="@dimen/_30sdp"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_marginRight="@dimen/_10sdp"-->
            <!--android:background="@mipmap/cross_32" />-->
    </RelativeLayout>
</LinearLayout>